[Unit]
Description=Invoice Tracker Backend (Docker Compose)
After=docker.service network-online.target
Requires=docker.service

[Service]
Type=oneshot
WorkingDirectory=/var/www/invoice-tracker-backend
Environment=COMPOSE_FILE=docker-compose.yml
Environment=ENV_FILE=.env.production.local
ExecStart=/usr/bin/docker compose --env-file ${ENV_FILE} up -d --build
ExecStop=/usr/bin/docker compose down
RemainAfterExit=yes
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target


